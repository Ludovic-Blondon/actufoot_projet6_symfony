<div class="col-lg-4 col-md-6 mb-4">
    <div class="card h-100">
        <a href="{{ path('post.show', {id: post.id, slug: post.slug}) }}"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
        <div class="card-body d-flex flex-column justify-content-between">
            <h6>{{ post.category }}</h6>
            <h4 class="card-title text-center">
                <a href="{{ path('post.show', {id: post.id, slug: post.slug}) }}"><strong>{{ post.title | upper }}</strong></a>
            </h4>
            <p class="card-text text-justify">{{ post.content | striptags | truncate(200, true) | raw }}</p>
            <p><a class="btn btn-primary mt-2" href="{{ path('post.show', {id: post.id, slug: post.slug}) }}">lire la suite</a></p>
        </div>
        <div class="card-footer">
            <p class="card-text"><small class="text-muted">Posté le {{ post.postAt | date("d/m/Y à h:m:s") }} par {{ post.author }}</small></p>
        </div>
    </div>
</div>